<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="colorPrimaryDark">@color/primaryGreen</item>
    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="NoActionBarTheme" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="BaseTheme">
        <item name="elevation">@dimen/edge_normal</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_mini_normal</item>
        <item name="android:subtitleTextStyle">
            @style/Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
    </style>

    <style name="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_mini</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/lightGreen</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="myCustomCalendarTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_mini_normal</item>
    </style>


    <style name="CustomDayTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_mini</item>
    </style>

    <!--Define custom font style-->
    <style name="font_style_activity_title">
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="font_style_activity_description">
        <item name="android:fontFamily">Helvetica</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="font_style_tab_selected">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/lightGreen</item>
        <item name="android:textSize">12.5sp</item>
    </style>
    <style name="font_style_tab">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#9f9f9f</item>
        <item name="android:textSize">12.5sp</item>
    </style>
    <style name="font_style_content_title">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#1b1b1b</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="font_style_content_title_highlight">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1b1b1b</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="font_style_content_subtitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#1b1b1b</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="font_style_content_subtitle_highlight">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1b1b1b</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="font_style_content_description">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#9f9f9f</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="font_style_content_description_highlight">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#9f9f9f</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
