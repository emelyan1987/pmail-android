<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/flMainMore"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/llMore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/cardSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edge_normal"
            >

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_settings_black"
                android:drawablePadding="@dimen/edge_normal"
                android:gravity="center_vertical"
                android:padding="@dimen/edge_big"
                android:text="@string/account_settings"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal"
                android:textStyle="normal"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardUnsubscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edge_normal"
            >

            <TextView
                android:id="@+id/tvUnsubscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mail_black"
                android:drawablePadding="@dimen/edge_normal"
                android:gravity="center_vertical"
                android:padding="@dimen/edge_big"
                android:text="@string/unsubscribe"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal"
                android:textStyle="normal"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edge_normal"
            >

            <TextView
                android:id="@+id/tvTracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_track_black"
                android:drawablePadding="@dimen/edge_normal"
                android:gravity="center_vertical"
                android:padding="@dimen/edge_big"
                android:text="@string/track"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="@dimen/text_normal"
                android:textStyle="normal"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</FrameLayout>