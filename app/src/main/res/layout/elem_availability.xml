<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cardViewElementAvailability"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/edge_normal">

    <RelativeLayout
        android:id="@+id/rlAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAvailabilityDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/edge_normal"
                android:layout_marginLeft="@dimen/edge_normal"
                android:layout_marginTop="@dimen/edge_normal"
                android:padding="@dimen/edge_normal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_normal"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tvAvailabilityStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/edge_normal"
                android:layout_marginBottom="@dimen/edge_normal"
                android:layout_marginLeft="@dimen/edge_normal"
                android:layout_marginTop="@dimen/edge_normal"
                android:background="@drawable/green_background"
                android:padding="@dimen/edge_normal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAvailabilityEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/edge_normal"
                android:layout_marginLeft="@dimen/edge_normal"
                android:layout_marginTop="@dimen/edge_normal"
                android:background="@drawable/green_background"
                android:padding="@dimen/edge_normal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>