<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pagerTutorial"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGreen"
        android:orientation="horizontal"
        >

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicatorTutorial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:centered="true"
                android:padding="@dimen/edge_normal"
                app:fillColor="@color/gray_light"
                app:pageColor="@color/white"
                app:radius="@dimen/edge_normal_medium"
                />

        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edge_medium"
            android:layout_marginLeft="@dimen/edge_above"
            android:layout_marginRight="@dimen/edge_above"
            android:layout_marginTop="@dimen/edge_medium"
            android:drawablePadding="@dimen/edge_normal"
            android:drawableRight="@drawable/ic_chevron_right_white"
            android:gravity="center"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium"
            android:textStyle="normal"
            />
    </LinearLayout>

</LinearLayout>