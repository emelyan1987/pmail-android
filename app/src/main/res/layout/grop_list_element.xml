<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMainGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/item_divider"
        android:layout_width="wrap_content"
        android:layout_height="1px" />

    <TextView
        android:id="@+id/tvMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edge_medium"
        android:drawableLeft="@drawable/ic_mail_black"
        android:drawablePadding="@dimen/edge_medium"
        android:drawableRight="@drawable/ic_expand_more_black"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_mini_normal"
        android:textStyle="normal" />


</LinearLayout>