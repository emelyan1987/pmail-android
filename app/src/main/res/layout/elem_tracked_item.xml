<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:baselineAligned="false"
              android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/tracked_item_iv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_opened"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tracked_item_tv_actor"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:text="antonivanov87219@hotmail.com"
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tracked_item_tv_location"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:text="Ukraine"
                android:textSize="13dp"
                android:textColor="@color/lightGrayColor"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tracked_item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:text="July 11,2016 15:00"
                android:textSize="13dp"
                android:textColor="@color/lightGrayColor"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/tracked_item_iv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_desktop"/>
    </LinearLayout>
</LinearLayout>