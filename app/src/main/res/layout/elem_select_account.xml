<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvAddMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edge_medium"
        android:drawableLeft="@drawable/ic_mail_grey"
        android:drawablePadding="@dimen/edge_above"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:minHeight="@dimen/edge_huge"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_mini_normal"
        android:textStyle="normal" />
</FrameLayout>