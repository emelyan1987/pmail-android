<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="220dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/unsubscribeTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/edge_medium"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/edge_medium"
        android:layout_marginLeft="@dimen/edge_above"
        android:layout_marginRight="@dimen/edge_medium"
        android:layout_marginTop="@dimen/edge_big"
        android:text="@string/unsubscribeDescription"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textStyle="normal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/edge_tiny"
        android:background="@color/primaryGreen"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_green"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/btCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/cancel"
            android:textColor="@color/primaryGreen"
            android:textStyle="normal"
            />

        <View
            android:layout_width="@dimen/edge_tiny"
            android:layout_height="@dimen/edge_most"
            android:background="@color/primaryGreen"
            />

        <Button
            android:id="@+id/btUnsubscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/unsubscribe"
            android:textColor="@color/primaryGreen"
            android:textStyle="normal"
            />
    </LinearLayout>
</LinearLayout>